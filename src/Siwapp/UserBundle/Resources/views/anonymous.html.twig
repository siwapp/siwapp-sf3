{% extends "SiwappCoreBundle::base_minimal.html.twig" %}

{% block stylesheets %}
  {{ parent() }}
  {% stylesheets 'bundles/siwappuser/css/login.css' filter='cssrewrite' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
  {% endstylesheets %}
{% endblock %}

{% block body %}
<div class="row">
  <div class="col-sm-6 col-md-4 col-md-offset-4">

    <h1 class="text-center login-title"><a href="{{ path('fos_user_security_login') }}">Sign in</a> to continue to Siwapp</h1>

    {% if app.request.hasPreviousSession %}
      {% for type, flashes in app.session.flashbag.all %}
        {% for flash in flashes %}
          <div class="alert alert-{{ type }} fade in">
            {{ flash }}
          </div>
        {% endfor %}
      {% endfor %}
    {% endif %}

    <div class="account-wall">
      <div class="logo text-center">
        <img src="{{ asset('bundles/siwappcore/img/logo.svg') }}" alt="Siwapp" />
      </div>
      {% block fos_user_content %}{% endblock %}

    </div>
  </div>
</div>
{% endblock %}
